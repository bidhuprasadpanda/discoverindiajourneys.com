<div class="main" role="main">
    <div id="content" class="content full" style="padding-top:10px;">
        <div class="container">
            <div class="row">
                {{!--
                <div class="col-md-12 provider_heading">
                    <h2>All Package Providers</h2>
                </div>--}}
                <h2 class="decorated"><span>All Hotels</span></h2>

            </div>
        </div>
        <div class="container">
             <div class="row new_item_button">
                <a href="/admin/admin_home/accomodation-new"><button class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i>&nbsp;ADD ACCOMMODATION</button></a>
             </div>
            <div class="row">
                
                 {{!-- Edit Form--}}
               <div class="modal fade" tabindex="-1" role="dialog" id="myModal">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                        
                        <div class="modal-body provider_form">
                           <form id="accomodationForm">
                                    <div class="form-group">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label for="country">COUNTRY</label>
                                        <select id="accomodation_country_list" name ="country" class="form-control accomodation_country_list"></select> 
                                    </div>
                                    <div class="col-md-6">
                                        <label for="state">STATE</label>
                                        <select id="accomodation_state_list" name="state" class="form-control accomodation_state_list"></select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-7">
                                        <label for="hotelname">Hotel Name</label>
                                        <input type="text" id="hotelname" name="hotelname" class="form-control accomodation_name">
                                    </div>
                                    
                                    <div class="col-md-5">
                                        <label for="starcategory">Star category</label>
                                        <select name="starcategory" id="starcategory" class="form-control accomodation_starcategory">
                                            <option value="">Select Hotel Category</option>
                                            <option value="2 STAR HOTEL">2 STAR HOTEL</option>
                                            <option value="3 STAR HOTEL">3 STAR HOTEL</option>
                                            <option value="4 STAR HOTEL">4 STAR HOTEL</option>
                                            <option value="5 STAR HOTEL">5 STAR HOTEL</option>
                                            <option value="Villa">Villa</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-12">
                                        <label for="description">Short Description</label>
                                        <textarea class="form-control accomodation_description" name="description" cols="50" rows="5" id="description" ></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-8">
                                        <label for="Roomtype">Room type</label>
                                    
                                        {{!--<div class="input_fields_wrap">
                                            <button class="add_field_button btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i>&nbsp;Add More Fields</button>
                                            <div> <input type="text" id="Roomtype" name="mytext[]" class="form-control"></div>
                                        </div>--}}
                                        <div id='TextBoxesGroupAccomodation' class="TextBoxesGroupAccomodation">
                                            <div id="TextBoxDiv1">
                                                <label>Room #1 : </label>
                                                <input type='textbox' id='textbox1' name="textbox" class="form-control" >
                                            </div>
                                        </div>
                                        <input type='button' value='Add Room' id='addButton'>
                                        <input type='button' value='Remove Room' id='removeButton'>
                                        {{!--<input type='button' value='Get TextBox Value' id='getButtonValue'>--}}
                                    </div>
                                    <div class="col-md-4"></div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-6 img_upload_btn">
                                        <form name="fileUpload" id="fileUpload" action="/admin/admin_home/fileUpload" enctype="multipart/form-data" method="post" role="form" class="form-inline">
                                            <div class="form-group">
                                                <label>Choose image to upload: </label>
                                                <input name="uploadfile" type="file" id="myFile">
                                                <span style="color:red">Upload only image file (PNG, JPEG, GIF)</span>
                                            </div>
                                            <div class="form-group">
                                                <input value="UPLOAD" type="button" class="btn btn-primary btn-upload">
                                                <span>(Click Here To Upload The Image)</span>
                                            </div>
                                            <div style="display:none;margin-top:10px;" class="progress">
                                                <div role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" class="progress-bar progress-bar-striped active">0% </div>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="col-md-6">
                                    <div>
                                        <h3>List all uploaded files</h3>
                                    </div>
                                        <p id="msg"></p>
                                        <div id="files" class="accomodation_Images" style="display: grid;"></div>
                                    </div>
                                </div>
                            </div>
                              <div class="form-group">
                                <div class="row">
                                    <div class="col-md-12 submit_button_group">
                                        <input type="hidden" name="_csrf" value="{{ csrfToken }}" >
                                        <button type="button" form="accomodationForm" value="Submit" class="btn btn-primary updateAccomodation"><i class="fa fa-floppy-o" aria-hidden="true"></i>&nbsp;Save Accomodation</button>
                                    </div>
                                </div>
                            </div>
                                    
                         </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default accomodation-close-btn" data-dismiss="modal">Close</button>
                        </div>
                        </div><!-- /.modal-content -->
                    </div><!-- /.modal-dialog -->
                </div><!-- /.modal -->
                     <section class="get">
                            {{!--<a href="/admin/admin_home/accomodation"><button type="button" class="btn btn-success">LOAD DATA&nbsp;<i class="fa fa-refresh" aria-hidden="true"></i></button></a>--}}
                               
                             <div>
                                 
                                 {{!--json accomodations--}}
                                {{#each accomodations }}
                                    <article class="item accomodation_form">
                                        
                                         <div>Hotel Name:<span class="accomodation_name"  data-id="{{this._id}}"> {{ this.hotelname }}</span></div>
                                         {{#mixWithDestination}}
                                         <div>Country:<span class="accomodation_country"  > {{ name }}</span></div>
                                         {{/mixWithDestination}}
                                         <div style="display: none;"><span class="accomodation_country_id" data-id="{{ this.countryId }}" > {{ this.countryId }}</span></div>
                                         <div style="display: none;"><span class="accomodation_state" data-id="{{ this.stateId }}" > {{ this.stateId }}</span></div>
                                         <div style="display: none;"> <span class="accomodation_category">{{this.category}}</span></div>
                                         <div style="display: none;"> <span class="accomodation_description">{{this.description}}</span></div>
                                        
                                         {{#each this.roomtypes as |roomType|}}
                                                <div style="display: none;" ><span class="accomodation_roomtype"> {{roomType}}</span></div>
                                         {{/each}}
                                         {{#each this.images as |img|}}
                                                <div style="display: none;" class="destination_images">{{img}}</div>
                                        {{/each}}
                                         <form>
                                            <button type="button" class="btn btn-warning get_accomodation" data-toggle="modal" data-target="#myModal" data-backdrop="static" data-keyboard="false" >Edit &nbsp;<i class="fa fa-pencil-square-o" aria-hidden="true"></i></button>
                                            <button type="button" class="btn btn-danger deleteAccomodation" data-id="{{this._id}}">Delete&nbsp;<i class="fa fa-trash-o" aria-hidden="true"></i></button>
                                         </form>   
                                        </article>
                                    {{/each}}
                                    
                                </div>
                     </section>
            </div>
        </div>
    </div>
</div>