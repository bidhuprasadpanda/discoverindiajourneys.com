<div class="main" role="main">
    <div id="content" class="content full" style="padding-top:10px;">
        <div class="container">
            <div class="row">
                {{!--
                <div class="col-md-12 provider_heading">
                    <h2>All Package Providers</h2>
                </div>--}}
                <h2 class="decorated"><span>States</span></h2>
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="create_package_button">
                        <a href="/admin/admin_home/destination-new"> <button type="button" class="btn btn-default"><i class="fa fa-plus" aria-hidden="true"></i>&nbsp;Create New State</button></a>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                {{!-- Create Form--}} {{!-- Edit Form--}}
                <div class="modal fade" tabindex="-1" role="dialog" id="myModal">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-body destination_form">

                                <form id="updateCountryDestination">
                                    <div class="form-group">
                                        <label for="name">State Name</label>
                                        <input type="text" id="name" name="name" class="form-control dest_name">
                                    </div>
                                    <div class="form-group ">
                                        <label for="continentname">Country</label>
                                        <select id="continent_package" name ="continentid" onchange="" class="form-control select_continentlist_destination" required>
                                            <option value="default">Select Country Name</option> 
                                            <option value=""></option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="name">Quote For The State</label>
                                        <input type="text" id="quote_for_country" name="quote" class="form-control quote_for_country">
                                    </div>
                                    <div class="form-group">
                                        <label for="name">About The State</label>
                                        <textarea type="text" id="aboutCountry" name="aboutCountry" cols="70" rows="5" class="form-control about_country">
                                        </textarea>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <div id="images"></div>
                                            <div class="form-group">
                                                <div class="col-md-12">
                                                    <div class="col-md-6 img_upload_btn">
                                                        <form name="fileUpload" id="fileUpload" enctype="multipart/form-data" method="post"
                                                            role="form" class="form-inline">
                                                            <div class="form-group">
                                                                <label>Choose image to upload: </label>
                                                                <input name="uploadfile" type="file" id="myFile">
                                                                <span style="color:red">Upload only image file (PNG, JPEG, GIF)</span>
                                                            </div>
                                                            <div class="form-group">
                                                                <input value="UPLOAD" type="button" class="btn btn-primary btn-upload">
                                                                <span>(Click Here To Upload The Image)</span>
                                                            </div>
                                                            <div style="display:none;margin-top:10px;" class="progress">
                                                                <div role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" class="progress-bar progress-bar-striped active">0% </div>
                                                            </div>
                                                        </form>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div>
                                                            <h3>List all uploaded files</h3>
                                                        </div>
                                                        <p id="msg"></p>
                                                        <div id="files"  class="country_Present_Images" style="display: grid;"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                                    <button type="button" form="updateCountryDestination" value="Submit" class="btn btn-primary updateDestination" data-id=""><i class="fa fa-floppy-o" aria-hidden="true"></i>&nbsp;SAVE CHANGES</button>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default btn-dest-close" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                        <!-- /.modal-content -->
                    </div>
                    <!-- /.modal-dialog -->
                </div>
                <!-- /.modal -->
                <div class="col-md-12">
                    <section class="get">
                        <div class="row">
                            <h2 class="decorated textbox2">All States</h2>
                        </div>

                        {{!--<a href="/admin/admin_home/destination"><button type="button" class="btn btn-success">LOAD DATA&nbsp;<i class="fa fa-refresh" aria-hidden="true"></i></button></a>--}}

                        <div>
                            {{# each items }}
                            <article class="item destination_form">

                                <div>Name: <span class="destination_name" data-id="{{this._id}}">{{ this.name }}</span></div>
                                {{#mixdestinations}}
                                <div>Continent Name: <span class="continent_name">{{ name }}</span></div>
                                {{/mixdestinations}}
                                <div style="display: none;"><span class="about_country"> {{ this.about }}</span></div>
                                <div style="display: none;"><span class="travel_tips"> {{ this.traveltips }}</span></div>
                                <div style="display: none;"><span class="destination_quote"> {{ this.quote }}</span></div>
                                
                                {{#each this.images as |img|}}
                                <div style="display: none;" class="destination_images">{{img}}</div>
                                {{/each}}
                                <form style="bottom: 10px;">
                                    <button type="button" class="btn btn-warning get_dest" data-toggle="modal" data-target="#myModal" data-backdrop="static"
                                        data-keyboard="false">Edit &nbsp;<i class="fa fa-pencil-square-o" aria-hidden="true"></i></button>
                                    <button type="button" class="btn btn-danger deleteDestination" data-id="{{this._id}}">Delete&nbsp;<i class="fa fa-trash-o" aria-hidden="true"></i></button>
                                </form>

                            </article>
                            {{/each}}
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>