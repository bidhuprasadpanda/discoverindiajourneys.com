<div class="main" role="main">
    <div id="content" class="content full" style="padding-top:10px;">
        <div class="container">
            <div class="row">
                {{!--
                <div class="col-md-12 provider_heading">
                    <h2>All Package Providers</h2>
                </div>--}}
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="create_package_button">
                       <a href="/admin/admin_home/continents-new"> <button type="button" class="btn btn-default"><i class="fa fa-plus" aria-hidden="true"></i>&nbsp;Add New Continent</button></a>
                    </div>
                </div>

            </div>
        </div>
        <div class="container">
            <div class="row">
                {{!-- Create Form--}}

                {{!-- Create Form--}} {{!-- Edit Form--}}
                <div class="modal fade" tabindex="-1" role="dialog" id="myModal">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-body Place_form_update">

                                <form id="updateContinentPlace">
                                    <div class="form-group">
                                        <label for="name">Continent Name</label>
                                        <input type="text" id="continent_name_edit" name="continentname"  class="form-control continent_name_edit" >
                                    </div>
                                    <div class="form-group">
                                        <label for="description">Description</label>
                                        <textarea name="description" class="form-control continent_description_edit" id="continent_description" cols="70" rows="5"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="quote">Quote</label>
                                        <textarea name="quote" class="form-control continent_quote_edit" id="continent_quote_edit" cols="70" rows="2"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <div id="images"></div>
                                            <div class="form-group">
                                                <div class="col-md-12">
                                                    <div class="col-md-6 img_upload_btn">
                                                        <form name="fileUpload" id="fileUpload" enctype="multipart/form-data" method="post"
                                                            role="form" class="form-inline">
                                                            <div class="form-group">
                                                                <label>Choose image to upload: </label>
                                                                <input name="uploadfile" type="file" id="myFile">
                                                                <span style="color:red">Upload only image file (PNG, JPEG, GIF)</span>
                                                            </div>
                                                            <div class="form-group">
                                                                <input value="UPLOAD" type="button" class="btn btn-primary btn-upload">
                                                                <span>(Click Here To Upload The Image)</span>
                                                            </div>
                                                            <div style="display:none;margin-top:10px;" class="progress">
                                                                <div role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" class="progress-bar progress-bar-striped active">0% </div>
                                                            </div>
                                                        </form>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div>
                                                            <h3>List all uploaded files</h3>
                                                        </div>
                                                        <p id="msg"></p>
                                                        <div id="files"  class="continent_Present_Images" style="display: grid;"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                                    <button type="button" form="updateContinentPlace" value="Submit" class="btn btn-primary updateContinent" data-id=""><i class="fa fa-floppy-o" aria-hidden="true"></i>&nbsp;SAVE CHANGES</button>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-default btn-place-close" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                        <!-- /.modal-content -->
                    </div>
                    <!-- /.modal-dialog -->
                </div>
                <!-- /.modal -->
               
               {{!-- Edit Form--}}
              
                <div class="col-md-12">
                     <section class="get">
                         <div class="row">
                             <h2 class="decorated textbox2">ALL Continents</h2>
                         </div>
                             {{!--<a href="/admin/admin_home/places"><button type="button" class="btn btn-success">LOAD DATA&nbsp;<i class="fa fa-refresh" aria-hidden="true"></i></button></a>--}}                               
                                <div class="responsive">
                                        <table class="table table-striped table-hover">
                                            <thead>
                                                <tr>
                                                    <th><b class="continent_heading">Continent Name :</b></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {{#each items }}
                                                <tr class="continent_details_table">
                                                    <td class="continent_name"><strong>{{this.name}}</strong></td>
                                                    <td class="continent_quote" style="display:none;">{{this.quote}}</td>
                                                    <td class="continent_about" style="display:none;">{{this.about}}</td>
                                                    <td class="continent_userid" style="display:none;">{{this.user_id}}</td>
                                                    {{#each this.images as |img|}}
                                                        <td style="display: none;" class="continent_images_edit">{{img}}</td>
                                                    {{/each}}
                                                    <td>
                                                        <a  class="btn btn-success continent_details_edit" data-id="{{this._id}}" data-toggle="modal" data-target="#myModal" data-backdrop="static" data-keyboard="false">Edit</a>
                                                        <a  class="btn btn-warning deleteContinent" data-id="{{this._id}}">Delete</a>
                                                    </td>
                                                </tr>
                                                {{/each}}
                                            </tbody>
                                        </table>
                                    
                                </div>
                     </section>
                </div>
            </div>
        </div>
    </div>
</div>