<div class="main" role="main">
    <div id="content" class="content full" style="padding-top:10px;">
        <div class="container">
            <div class="row">
                {{!--
                <div class="col-md-12 provider_heading">
                    <h2>All Package Providers</h2>
                </div>--}}
                <h2 class="decorated"><span>Add Places</span></h2>

            </div>
        </div>
        
        {{!--{{places}}--}}
        <div class="container">
                 {{!-- Creating New Places--}}
            <div class="row">
                {{!-- Create Form--}}
                <div class="col-md-12">
                    
                     {{#if errors}}
                        <div class="alert alert-danger">
                            {{# each errors}}
                                <p><i class="fa fa-exclamation-triangle" aria-hidden="true"></i>&nbsp;{{this}}</p>
                            {{/each}}
                        </div>
                    {{/if}}
                    {{#if error}}
                        <div class="alert alert-danger">
                                <p><i class="fa fa-exclamation-triangle" aria-hidden="true"></i>&nbsp;Place Already Present!!</p>
                        </div>
                    {{/if}}
                    <form id="newplace" action="/admin/admin_home/places-new" method="post">
                        <div class="form-group">
                             <label for="name">Place Name</label>
                             <input type="text" id="place_name" name="placename" class="form-control place_name" >
                        </div>
                         <div class="form-group">
                             <label for="countryname">Country</label>
                             <select id="country_package" name ="countryid" class="form-control packages_country" required>
                                 <option value="default">Select Country Name</option> 
                                    {{#each destinations}}
                                        <option value="{{this._id}}">{{this.name}}</option>
                                    {{/each}} 
                             </select>
                        </div>
                        <div class="form-group">
                            <label for="description">Description</label>
                            <textarea name="description" class="form-control place_description" id="place_description" cols="70" rows="5"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="howtoget">How To Get There</label>
                            <textarea name="howtoget" class="form-control howto_get_there" id="howto_get_there" cols="70" rows="5"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="whentogo">When To Go</label>
                            <textarea name="whentogo" class="form-control when_to_go" id="when_to_go" cols="70" rows="5"></textarea>
                        </div>
                       <div class="form-group">
                            <label for="highlights">Highlights</label>
                            <textarea name="highlights" class="form-control place_highlights" id="place_highlights" cols="70" rows="5"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="latitude">Latitude:</label>
                            <input name="latitude" class="form-control place_map_latitude" id="place_map_latitude" >
                        </div>
                        <div class="form-group">
                            <label for="longitude">Longitude:</label>
                            <input name="longitude" class="form-control place_map_longitude" id="place_map_longitude">
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div id="images"></div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-6 img_upload_btn">
                                                <form name="fileUpload" id="fileUpload" action="/admin/admin_home/fileUpload" enctype="multipart/form-data" method="post" role="form" class="form-inline">
                                                     <div class="form-group">
                                                        <label>Choose image to upload: </label>
                                                        <input name="uploadfile" type="file" id="myFile">
                                                        <span style="color:red">Upload only image file (PNG, JPEG, GIF)</span>
                                                    </div>
                                                    <div class="form-group">
                                                        <input value="UPLOAD" type="button" class="btn btn-primary btn-upload">
                                                        <span>(Click Here To Upload The Image)</span>
                                                    </div>
                                                        <div style="display:none;margin-top:10px;" class="progress">
                                                            <div role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" class="progress-bar progress-bar-striped active">0% </div>
                                                        </div>
                                                    </form>
                                                </div>
                                                <div class="col-md-6">
                                                    <div>
                                                        <h3>List all uploaded files</h3>
                                                    </div>
                                                        <p id="msg"></p>
                                                        <div id="files"></div>
                                                </div>
                                            </div>
                                        </div>
                            </div>
                        </div>
                         <div class="form-group">
                            <div class="row">
                                <div class="col-md-12 submit_button_group">
                                    <input type="hidden" name="_csrf" value="{{ csrfToken }}" >
                                    <input type="submit" value="Submit" form="newplace" class="btn btn-info">
                                </div>
                            </div>
                         </div>
                    </form>
                </div>
               {{!-- Edit Form--}}
              
            </div>
           
        </div>
    </div>
</div>